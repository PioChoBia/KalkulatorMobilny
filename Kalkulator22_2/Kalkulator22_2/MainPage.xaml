<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kalkulator22_2.MainPage">
    
    <Grid  Margin="10" ColumnSpacing="10" RowSpacing="10" BackgroundColor="LightGray">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--dispaly-->
        <Frame x:Name="boxViewDisplay" BackgroundColor="Beige" 
                 Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="4"/>
        <Label x:Name="labelDisplay1" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" 
               FontSize="25" Text=""/>
        <Label x:Name="labelDisplay0" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" 
               FontSize="25" Text=""/>

        <!-- keys-->
        <Button x:Name="buttonCE" Text="CE" FontSize="Title" FontAttributes="Bold" BackgroundColor="#C0C0C0" 
                Grid.Row="2" Grid.Column="0" Clicked="ButtonCE_Clicked"/>
        <Button x:Name="buttonMRC" Text="MRC" FontSize="Title" FontAttributes="Bold" BackgroundColor="#C0C0C0"
                Grid.Row="2" Grid.Column="1" Clicked="ButtonMRC_Clicked"/>
        <Button x:Name="buttonMSubtraction" Text="M-" FontSize="Title" FontAttributes="Bold" BackgroundColor="#C0C0C0"
                Grid.Row="2" Grid.Column="2" Clicked="ButtonMSubtraction_Clicked"/>
        <Button x:Name="buttonMAddition" Text="M+" FontSize="Title" FontAttributes="Bold" BackgroundColor="#C0C0C0"
                Grid.Row="2" Grid.Column="3" Clicked="ButtonMAddition_Clicked"/>

        <Button x:Name="buttonDeleteSign" Text="&lt;-" FontSize="Title" FontAttributes="Bold" BackgroundColor="#C0C0C0"
                Grid.Row="3" Grid.Column="0" Clicked="ButtonDeleteSign_Clicked"/>
        <Button x:Name="buttonBracketLeft" Text="(" FontSize="Title" FontAttributes="Bold" BackgroundColor="#C0C0C0"
                Grid.Row="3" Grid.Column="1" Clicked="ButtonBracketLeft_Clicked"/>
        <Button x:Name="buttonBracketRight" Text=")" FontSize="Title" FontAttributes="Bold" BackgroundColor="#C0C0C0"
                Grid.Row="3" Grid.Column="2" Clicked="ButtonBracketRight_Clicked"/>
        <Button x:Name="buttonDivide" Text="/" FontSize="Title" FontAttributes="Bold" BackgroundColor="#C0C0C0"
                Grid.Row="3" Grid.Column="3" Clicked="ButtonDivide_Clicked"/>

        <Button x:Name="button7" Text="7" FontSize="Title" FontAttributes="Bold" BackgroundColor="#C0C0C0"
                Grid.Row="4" Grid.Column="0" Clicked="Button7_Clicked"/>
        <Button x:Name="button8" Text="8" FontSize="Title" FontAttributes="Bold" BackgroundColor="#C0C0C0"
                Grid.Row="4" Grid.Column="1" Clicked="Button8_Clicked"/>
        <Button x:Name="button9" Text="9" FontSize="Title" FontAttributes="Bold" BackgroundColor="#C0C0C0"
                Grid.Row="4" Grid.Column="2" Clicked="Button9_Clicked"/>
        <Button x:Name="buttonMultiplication" Text="*" FontSize="Title" FontAttributes="Bold" BackgroundColor="#C0C0C0"
                Grid.Row="4" Grid.Column="3" Clicked="ButtonMultiplication_Clicked"/>

        <Button x:Name="button4" Text="4" FontSize="Title" FontAttributes="Bold" BackgroundColor="#C0C0C0"
                Grid.Row="5" Grid.Column="0" Clicked="Button4_Clicked"/>
        <Button x:Name="button5"  Text="5" FontSize="Title" FontAttributes="Bold" BackgroundColor="#C0C0C0"
                Grid.Row="5" Grid.Column="1" Clicked="Button5_Clicked"/>
        <Button x:Name="button6"  Text="6" FontSize="Title" FontAttributes="Bold" BackgroundColor="#C0C0C0"
                Grid.Row="5" Grid.Column="2" Clicked="Button6_Clicked"/>
        <Button x:Name="buttonSubtraction"  Text="-" FontSize="Title" FontAttributes="Bold" BackgroundColor="#C0C0C0"
                Grid.Row="5" Grid.Column="3" Clicked="ButtonSubtraction_Clicked"/>

        <Button x:Name="button1" Text="1" FontSize="Title" FontAttributes="Bold" BackgroundColor="#C0C0C0"
                Grid.Row="6" Grid.Column="0" Clicked="Button1_Clicked"/>
        <Button x:Name="button2"  Text="2" FontSize="Title" FontAttributes="Bold" BackgroundColor="#C0C0C0"
                Grid.Row="6" Grid.Column="1" Clicked="Button2_Clicked"/>
        <Button x:Name="button3"  Text="3" FontSize="Title" FontAttributes="Bold" BackgroundColor="#C0C0C0"
                Grid.Row="6" Grid.Column="2" Clicked="Button3_Clicked"/>
        <Button x:Name="buttonAddition"  Text="+" FontSize="Title" FontAttributes="Bold" BackgroundColor="#C0C0C0"
                Grid.Row="6" Grid.Column="3" Clicked="ButtonAddition_Clicked"/>

        <Button x:Name="buttonF" Text="F" FontSize="Title" FontAttributes="Bold" BackgroundColor="#C0C0C0"
                Grid.Row="7" Grid.Column="0" Clicked="ButtonF_Clicked"/>
        <Button x:Name="button0" Text="0" FontSize="Title" FontAttributes="Bold" BackgroundColor="#C0C0C0"
                Grid.Row="7" Grid.Column="1" Clicked="Button0_Clicked"/>
        <Button x:Name="buttonDot"  Text="." FontSize="Title" FontAttributes="Bold" BackgroundColor="#C0C0C0"
                Grid.Row="7" Grid.Column="2" Clicked="ButtonDot_Clicked"/>
        <Button x:Name="buttonEqual"  Text="=" FontSize="Title" FontAttributes="Bold" BackgroundColor="#C0C0C0"
                Grid.Row="7" Grid.Column="3"  Clicked="ButtonEqual_Clicked"/>



    </Grid>
    
    
    
